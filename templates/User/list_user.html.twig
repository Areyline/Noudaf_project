{% extends 'base.html.twig' %}

{% block title %} List user {% endblock %}

{% block body %}
    <h2> List of users </h2>

    <div class="row" id="liens">
        <div class="col-md-10">
            <a href="{{ path('noudaf_user_add') }}" class="btn btn-info"> Add user</a>
        </div>
    </div>

    <div class="row" id="user-list">
        <div class="col-md-10">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th> Names </th>
                    <th> Email</th>
                    <th> Actions </th>
                </tr>
                </thead>
                <tbody>

                {% for user in users %}

                    <tr>
                        <td> {{ user.lastname }} {{ user.firstname }} </td>
                        <td> {{ user.email }} </td>
                        <td>
                            <a href="{{ path('noudaf_user_edit', {id: user.id}) }}">Edit</a>
                            <a href="{{ path('noudaf_user_delete', {id: user.id}) }}"> Delete </a>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

        </div>
    </div>
{% endblock %}